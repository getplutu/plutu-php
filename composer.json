{
    "name": "plutu/plutu-php",
    "description": "Plutu for php",
    "keywords": ["plutu", "php", "api", "payment", "services"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Plutu Team",
            "email": "developers@plutu.ly",
            "homepage": "https://plutu.ly"
        },
        {
            "name": "Mohamed Endisha",
            "email": "mohamed.endisha@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Plutu\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload-dev": {
        "psr-4": { 
            "PlutuTests\\": "tests/" 
        }
    },
    "scripts": {
        "tests": [
            "vendor/bin/phpunit"
        ]
    },
    "minimum-stability": "stable"
}
